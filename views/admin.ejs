<%- include admin_header %>
<div class="mainBlock">
    <h5>商品信息管理</h5>
    <a type="button" class="btn btn-primary" href="add_product">添加商品</a>
    <table class="table">
        <tr>
            <td>序号</td>
            <td>商品名称</td>
            <td>商品数量</td>
            <td>单价（元）</td>
            <td>单位</td>
            <td>发布时间</td>
            <td>操作</td>
        </tr>
        <% shops.forEach(function(shop,index){ %>
        <tr>

            <td><%= index+1 %></td>
            <td><%= shop.name %></td>
            <td>
                <div class="btn-group">
                    <a type="button" class="btn btn-default" href="/admin_lessOrMore?flag=less&shopName=<%= shop.name%>&number=<%= shop.number%>">-</a>
                    <input type="text" name="product_number" class="btn btn-default disabled" value="<%= shop.number%>" size="2">
                    <a type="button" class="btn btn-default" href="/admin_lessOrMore?flag=more&shopName=<%= shop.name%>&number=<%= shop.number%>">+</a>
                </div>
            </td>
            <td><%= shop.unitPrice %></td>
            <td><%= shop.unit %></td>
            <td><%= shop.publish_time %></td>
            <td><a href="product_detail?product_name=<%= shop.name %>">详情</a>  <a href="delete_product?product_name=<%= shop.name %>">删除</a></td>
        </tr>
        <% })%>
    </table>
</div>
<%- include admin_footer%>