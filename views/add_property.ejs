<%- include admin_header.ejs%>
<div>
    <a href="admin">商品信息管理</a>>><a href="add_product">添加商品</a>>>添加属性
</div>
<div class="mainBlock text-center">
<form class="form-horizontal" role="form" method="post" name = 'add_property'>
    <table class="table">
        <tr>
            <td>
                属性名：
            </td>
            <td>
                <input type="text"  name="property_name" placeholder="请输入属性名" size="20" onchange="check_input()">
            </td>
        </tr>
        <tr>
            <td>
                属性值：
            </td>
            <td>
                <input type="text"  name="property_value" placeholder="请输入属性值" size="20" onchange="check_input()">
            </td>
        </tr>
        <tr>
            <td>
                <input type="submit"  class="btn btn-default" disabled="true" value="保存" id="submit" onclick="return verification()">
            </td>
            <td>
                <a type="button" class="btn btn-default" href="add_product">取消</a>
            </td>
        </tr>
    </table>
</form>


</div>

<script>
    function check_input(){
        var submit=document.getElementById("submit");
        if(document.add_property.property_name.value ==""||document.add_property.property_value.value ==""){
            submit.disabled = true;
        }
        else{
            submit.disabled = false;
        }
    }
</script>


