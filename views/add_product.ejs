<%- include admin_header %>
<div class="mainBlock">


    <div>
        <form class="form-horizontal" role="form" method="post" name = 'add_product'>
            <div class="row">
                <div class="col-md-3"><input type="submit"  class="btn btn-default" value="保存商品" onclick="return check()"/></div>
                <div class="col-md-3"><button type="button" class="btn btn-default">添加属性</button></div>
                <div class="col-md-3"><button type="button" class="btn btn-default">删除属性</button></div>
                <div class="col-md-3"><button type="button" class="btn btn-default">取消</button></div>
            </div>
            <table class="table">
                <tr>
                    <td>
                        商品名称：
                        </td>
                    <td>
                        <input type="text"  name="product_name" placeholder="请输入商品名称" size="20">
                    </td>
                    <td>
                        商品数量：</td>
                    <td>
                        <div class="btn-group">
                            <button type="button" class="btn btn-default">-</button>
                            <input type="text" class="btn btn-default" name="product_number" value="0" size="2">
                            <button type="button" class="btn btn-default">+</button>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td>
                        单价（元）：</td>
                    <td>
                        <input type="text"  name="product_price" placeholder="请输入单价" size="20">
                    </td>
                    <td>
                        单位：</td>
                    <td>
                        <input type="text" name="product_unit" placeholder="请输入单位" size="20">
                    </td>
                </tr>
                <tr>
                    <td>分类：
                        <select name="category">
                            <option value="饮料">饮料</option>
                            <option value="水果">水果</option>
                            <option value="生活用品">生活用品</option>
                            <option value="食品">食品</option>
                        </select>
                    </td>
                </tr>
            </table>
            <script>
                function check() {
                    var current_from  = document.add_product;
                    if(current_from.product_name.value == '' ||
                            current_from.category.value == '' ||
                            current_from.product_number.value == 0 ||
                            current_from.product_price.value == '' ||
                            current_from.product_unit.value == '' ){
                        alert("输入有误,请确认!");
                        return false;
                    }
                    current_from.submit();

                }
            </script>

        </form>
    </div>


</div>
<%- include admin_footer%>