<%- include admin_header %>
<div class="mainBlock">
    <div class="row">
        <div class="col-md-3"><button type="button" class="btn btn-default">保存商品</button></div>
        <div class="col-md-3"><button type="button" class="btn btn-default">添加属性</button></div>
        <div class="col-md-3"><button type="button" class="btn btn-default">删除属性</button></div>
        <div class="col-md-3"><button type="button" class="btn btn-default">取消</button></div>
    </div>

    <div>
        <form class="form-horizontal" role="form">
            <table class="table">
                <tr>
                    <td>
                        商品名称：
                    </td>
                    <td>
                        <input type="text"  id="product_mame" placeholder="" size="20" value="<%= this_product.name%>">
                    </td>
                    <td>
                        商品数量：</td>
                    <td>
                        <div class="btn-group">
                            <button type="button" class="btn btn-default">-</button>
                            <button type="button" class="btn btn-default"><span><%= this_product.number%></span></button>
                            <button type="button" class="btn btn-default">+</button>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td>
                        单价（元）：</td>
                    <td>
                        <input type="text"  id="product_price" placeholder="" size="20" value="<%= this_product.unitPrice%>">
                    </td>
                    <td>
                        单位：</td>
                    <td>
                        <input type="text" id="product_unit" placeholder="" size="20" value="<%= this_product.unit%>">
                    </td>
                </tr>
                <tr>
                    <td>
                        生产日期：</td>
                    <td>
                        <input type="text" id="production_date" placeholder="" size="20" value="<%= this_product.public_time%>">
                    </td>
                </tr>
            </table>

        </form>
    </div>

</div>
<%- include admin_footer%>