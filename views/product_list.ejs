<%- include header %>
    <div>
        <h1 style="text-align: center">商品列表</h1>
        <table class="table table-bordered">
            <tr>
                <td>分类</td>
                <td>名称</td>
                <td>单价（元）</td>
                <td>单位</td>
                <td></td>
            </tr>
            <% shops.forEach(function(shop,index){ %>
            <tr>
                <td><%= shop.category %></td>
                <td><%= shop.name %></td>
                <td><%= shop.unitPrice %></td>
                <td><%= shop.unit %></td>
                <td class="hidden"><%= shop.promotion %></td>
                <td><a class="btn btn-primary addCart" type="button" href="#">加入购物车</a></td>
            </tr>
            <% })%>
        </table>
    </div>
</div>
<%- include footer%>